.row { display: flex; align-items: flex-end; margin: 12rpx 16rpx; }
.left { flex-direction: row; }
.right { flex-direction: row-reverse; }
.avatar { width: 64rpx; height: 64rpx; border-radius: 50%; margin: 0 16rpx; }
.bubble { max-width: 78%; padding: 20rpx 24rpx; border-radius: 20rpx; word-break: break-word; }
.bubble.user { background: #2563eb; color: #fff; border-top-right-radius: 6rpx; }
.bubble.bot { background: #111827; color: #e5e7eb; border-top-left-radius: 6rpx; border: 1px solid #1f2937; }
.typing { display: inline-flex; gap: 8rpx; margin-top: 8rpx; }
.dot { width: 10rpx; height: 10rpx; border-radius: 50%; background: #9ca3af; animation: blink 1.2s infinite ease-in-out; }
.dot:nth-child(2) { animation-delay: .15s; }
.dot:nth-child(3) { animation-delay: .3s; }
@keyframes blink { 0%, 80%, 100% { opacity: .2 } 40% { opacity: 1 } }
.error { margin-top: 8rpx; font-size: 24rpx; color: #fca5a5; }
.retry { color: #93c5fd; text-decoration: underline; }