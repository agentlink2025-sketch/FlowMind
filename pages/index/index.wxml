<view class="page">
  <view class="hero">
    <view class="brand" style="top: {{statusBarHeight +60}}rpx;">云链灵智</view>

    <view class="actions">
      
      
    </view>

    <view class="middle">
    <view class="title">智慧营销新境界</view>
    <view class="subtitle">与 AI 对话，享智慧营销</view>

    <view class="composer">
      <textarea class="prompt"
        placeholder="探讨一下你的营销思考…"
        auto-height
        maxlength="-1"
        value="{{draft}}"
        bindinput="onInput"/>
      <button class="send" bindtap="goChat">
        <image class="arrow-icon" src="/images/arrow-up.svg" mode="aspectFit"/>
      </button>
    </view>
    <scroll-view class="chips" scroll-x>
      <view class="chip" wx:for="{{chips}}" wx:key="text"
            data-text="{{item}}" bindtap="onChipTap">{{item}}</view>
    </scroll-view>
  </view>
    


 
  </view>

  <view class="footer">
    <view class="tab active">创作</view>
    <view class="tab">案例</view>
    <view class="tab">论坛</view>
    <view class="tab" bindtap="goMe">我的</view>
  </view>
</view>
